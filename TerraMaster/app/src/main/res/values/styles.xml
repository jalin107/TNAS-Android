<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <!-- <item name="colorPrimaryDark">@color/primaryColorDark</item> -->

        <item name="patternViewStyle">@style/PatternView.Holo</item>
        <item name="android:textAllCaps">false</item>
    </style>
<!--player-->
    <style name="Universal.Widget.ProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/uvv_progress_rotate</item>
        <item name="android:indeterminateDuration">1000</item>
    </style>

    <style name="PatternView">
        <item name="aspect">square</item>
    </style>

    <style name="PatternView.Holo">
        #
        <item name="regularColor">@android:color/transparent</item>
        <item name="errorColor">@android:color/holo_red_light</item>
        <item name="successColor">@android:color/transparent</item>
        <item name="pathColor">@color/lock_path</item>
        <item name="dotDrawableDefault">@drawable/pl_patternview_dot_default</item>
        <item name="dotDrawableTouched">@drawable/pl_patternview_dot_touched</item>
        <item name="circleDrawableDefault">@drawable/pl_patternview_circle_default_alpha</item>
        <item name="circleDrawable">@drawable/pl_patternview_circle_alpha</item>
        <item name="arrowUpDrawable">@drawable/pl_patternview_arrow_alpha</item>
    </style>

    <style name="PatternView.Holo.Light">
        <item name="regularColor">@android:color/holo_blue_dark</item>
        <item name="successColor">@android:color/holo_blue_dark</item>
        <item name="pathColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="DialogNoAnimation">
        <item name="android:windowEnterAnimation">@anim/none_anim</item>
        <item name="android:windowExitAnimation">@anim/none_anim</item>
    </style>

    <style name="BaseButtonStyle">
        <item name="android:onClick">onClick</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="ButtonStyle" parent="BaseButtonStyle">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:padding">@dimen/dp_15</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="GreenButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/green_button</item>
    </style>

    <style name="BlueButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/blue_button</item>
    </style>

    <style name="RedButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/red_button</item>
    </style>

    <style name="GreyorderButtonStyle" parent="BaseButtonStyle">
        <item name="android:background">@drawable/edt_bg</item>
        <item name="android:textColor">@color/text_color_grey</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:padding">@dimen/dp_5</item>
    </style>

    <style name="MenuButtonStyle" parent="BaseButtonStyle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:padding">@dimen/dp_20</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textSize">@dimen/dp_18</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_7</item>
        <item name="android:paddingRight">@dimen/dp_7</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:background">@drawable/edt_bg</item>
    </style>

    <style name="BaseRLSettingsStyle">
        <item name="android:paddingTop">@dimen/dp_20</item>
        <item name="android:paddingBottom">@dimen/dp_20</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="RLSettingsStyle" parent="BaseRLSettingsStyle">
        <item name="android:onClick">onClick</item>
    </style>

</resources>